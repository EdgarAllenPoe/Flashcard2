<?xml version="1.0" encoding="UTF-8" ?>
        <Page
            x:Class="FlashcardApp.WinUI.Views.ConfigurationPage"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:local="using:FlashcardApp.WinUI"
            Loaded="Page_Loaded"
            Unloaded="Page_Unloaded">
    <Page.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Configuration Header -->
            <Border
                Grid.Row="0"
                Padding="20,15"
                Background="{ThemeResource SystemAccentColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="⚙️ Configuration" />

                    <Button
                        x:Name="BackButton"
                        Grid.Column="1"
                        Padding="10,5"
                        Background="Transparent"
                        Click="BackButton_Click"
                        Content="← Back"
                        FontSize="14"
                        Foreground="White"
                        ToolTipService.ToolTip="Return to Main Menu" />
                </Grid>
            </Border>

            <!-- Simple Content -->
            <ScrollViewer Grid.Row="1" Padding="20">
                <StackPanel Spacing="20">
                    <TextBlock
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="Configuration Settings" />
                    
                    <!-- Study Session Configuration -->
                    <Border
                        Padding="15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8">
                        <StackPanel Spacing="10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Study Session" />
                            
                            <ComboBox
                                x:Name="StudyModeComboBox"
                                Header="Default Study Mode"
                                Width="200">
                                <ComboBoxItem Content="Mixed" />
                                <ComboBoxItem Content="Front to Back" />
                                <ComboBoxItem Content="Back to Front" />
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Leitner Box Configuration -->
                    <Border
                        Padding="15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8">
                        <StackPanel Spacing="10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Leitner Box Settings" />
                            
                            <Slider
                                x:Name="NumberOfBoxesSlider"
                                Header="Number of Leitner Boxes"
                                Maximum="10"
                                Minimum="3"
                                StepFrequency="1"
                                Value="5" />

                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Review Intervals" />

                            <TextBox
                                x:Name="ReviewIntervalTextBox"
                                Header="Days between reviews"
                                PlaceholderText="e.g., 1, 3, 7, 14, 30"
                                Width="300" />
                        </StackPanel>
                    </Border>

                    <!-- Daily Limits Configuration -->
                    <Border
                        Padding="15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8">
                        <StackPanel Spacing="10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Daily Limits" />
                            
                            <Slider
                                x:Name="MaxCardsPerDaySlider"
                                Header="Maximum cards per day"
                                Maximum="100"
                                Minimum="1"
                                StepFrequency="1"
                                Value="20" />

                            <Slider
                                x:Name="MaxStudyTimeSlider"
                                Header="Maximum study time (minutes)"
                                Maximum="120"
                                Minimum="5"
                                StepFrequency="5"
                                Value="30" />

                            <Slider
                                x:Name="BreakIntervalSlider"
                                Header="Break interval (minutes)"
                                Maximum="60"
                                Minimum="1"
                                StepFrequency="1"
                                Value="5" />
                        </StackPanel>
                    </Border>

                    <!-- Advanced Study Session Configuration -->
                    <Border
                        Padding="15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8">
                        <StackPanel Spacing="10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Advanced Study Session" />
                            
                            <CheckBox
                                x:Name="AutoAdvanceCheckBox"
                                Content="Auto-advance to next card" />

                            <Slider
                                x:Name="AutoAdvanceDelaySlider"
                                Header="Auto-advance delay (seconds)"
                                Maximum="10"
                                Minimum="1"
                                StepFrequency="1"
                                Value="3" />

                            <CheckBox
                                x:Name="ShowStatisticsCheckBox"
                                Content="Show statistics during study" />

                            <CheckBox
                                x:Name="ShowProgressCheckBox"
                                Content="Show progress indicators" />

                            <CheckBox
                                x:Name="ShuffleCardsCheckBox"
                                Content="Shuffle cards before study" />
                        </StackPanel>
                    </Border>

                    <!-- File Paths Configuration -->
                    <Border
                        Padding="15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8">
                        <StackPanel Spacing="10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="File Paths" />
                            
                            <TextBox
                                x:Name="DeckStoragePathTextBox"
                                Header="Deck storage location"
                                PlaceholderText="C:\Users\Username\Documents\Flashcards"
                                Width="400" />

                            <TextBox
                                x:Name="BackupDirectoryTextBox"
                                Header="Backup directory"
                                PlaceholderText="C:\Users\Username\Documents\Flashcards\Backups"
                                Width="400" />

                            <TextBox
                                x:Name="ExportPathTextBox"
                                Header="Default export path"
                                PlaceholderText="C:\Users\Username\Documents\Flashcards\Exports"
                                Width="400" />

                            <TextBox
                                x:Name="ImportPathTextBox"
                                Header="Default import path"
                                PlaceholderText="C:\Users\Username\Documents\Flashcards\Imports"
                                Width="400" />

                            <TextBox
                                x:Name="LogFilePathTextBox"
                                Header="Log file location"
                                PlaceholderText="C:\Users\Username\Documents\Flashcards\Logs"
                                Width="400" />
                        </StackPanel>
                    </Border>

                            <!-- UI Settings Configuration -->
                            <Border
                                Padding="15"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="8">
                                <StackPanel Spacing="10">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="UI Settings" />
                                    
                                    <ComboBox
                                        x:Name="ThemeComboBox"
                                        Header="Application Theme"
                                        Width="200">
                                        <ComboBoxItem Content="System Default" />
                                        <ComboBoxItem Content="Light" />
                                        <ComboBoxItem Content="Dark" />
                                    </ComboBox>

                                    <Slider
                                        x:Name="FontSizeSlider"
                                        Header="Font Size"
                                        Maximum="24"
                                        Minimum="8"
                                        StepFrequency="1"
                                        Value="12" />

                                    <CheckBox
                                        x:Name="EnableAnimationsCheckBox"
                                        Content="Enable animations" />

                                    <Slider
                                        x:Name="AnimationSpeedSlider"
                                        Header="Animation Speed"
                                        Maximum="5"
                                        Minimum="1"
                                        StepFrequency="1"
                                        Value="3" />
                                </StackPanel>
                            </Border>

                            <!-- Accessibility Configuration -->
                            <Border
                                Padding="15"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="8">
                                <StackPanel Spacing="10">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Accessibility" />
                                    
                                    <CheckBox
                                        x:Name="EnableKeyboardNavigationCheckBox"
                                        Content="Enable keyboard navigation" />

                                    <ComboBox
                                        x:Name="TabOrderComboBox"
                                        Header="Tab Order"
                                        Width="200">
                                        <ComboBoxItem Content="Logical" />
                                        <ComboBoxItem Content="Visual" />
                                    </ComboBox>

                                    <CheckBox
                                        x:Name="EnableScreenReaderCheckBox"
                                        Content="Enable screen reader support" />

                                    <CheckBox
                                        x:Name="AnnounceChangesCheckBox"
                                        Content="Announce configuration changes" />
                                </StackPanel>
                            </Border>

                            <!-- Responsive Layout Configuration -->
                            <Border
                                Padding="15"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="8">
                                <StackPanel Spacing="10">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Responsive Layout" />
                                    
                                    <TextBox
                                        x:Name="SmallBreakpointTextBox"
                                        Header="Small breakpoint (px)"
                                        PlaceholderText="768"
                                        Width="150" />

                                    <TextBox
                                        x:Name="MediumBreakpointTextBox"
                                        Header="Medium breakpoint (px)"
                                        PlaceholderText="1024"
                                        Width="150" />

                                    <TextBox
                                        x:Name="LargeBreakpointTextBox"
                                        Header="Large breakpoint (px)"
                                        PlaceholderText="1440"
                                        Width="150" />

                                    <ComboBox
                                        x:Name="LayoutModeComboBox"
                                        Header="Default Layout Mode"
                                        Width="200">
                                        <ComboBoxItem Content="Compact" />
                                        <ComboBoxItem Content="Expanded" />
                                        <ComboBoxItem Content="Adaptive" />
                                    </ComboBox>
                                </StackPanel>
                            </Border>

                            <!-- Configuration Backup -->
                            <Border
                                Padding="15"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="8">
                                <StackPanel Spacing="10">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Configuration Backup" />
                                    
                                    <CheckBox
                                        x:Name="EnableAutoBackupCheckBox"
                                        Content="Enable automatic backup" />

                                    <Slider
                                        x:Name="BackupIntervalSlider"
                                        Header="Backup interval (days)"
                                        Maximum="30"
                                        Minimum="1"
                                        StepFrequency="1"
                                        Value="7" />

                                    <Slider
                                        x:Name="MaxBackupsSlider"
                                        Header="Maximum number of backups"
                                        Maximum="50"
                                        Minimum="5"
                                        StepFrequency="5"
                                        Value="10" />

                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Button
                                            x:Name="CreateBackupButton"
                                            Click="CreateBackupButton_Click"
                                            Content="📦 Create Backup" />

                                        <Button
                                            x:Name="RestoreBackupButton"
                                            Click="RestoreBackupButton_Click"
                                            Content="🔄 Restore Backup" />

                                        <Button
                                            x:Name="ManageBackupsButton"
                                            Click="ManageBackupsButton_Click"
                                            Content="🗂️ Manage Backups" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Advanced Validation -->
                            <Border
                                Padding="15"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="8">
                                <StackPanel Spacing="10">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="Advanced Validation" />
                                    
                                    <CheckBox
                                        x:Name="EnableCrossFieldValidationCheckBox"
                                        Content="Enable cross-field validation" />

                                    <CheckBox
                                        x:Name="ShowValidationErrorsCheckBox"
                                        Content="Show detailed validation errors" />

                                    <CheckBox
                                        x:Name="ValidateOnChangeCheckBox"
                                        Content="Validate on every change" />
                                </StackPanel>
                            </Border>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Button
                                    x:Name="SaveButton"
                                    Click="SaveButton_Click"
                                    Content="💾 Save" />

                                <Button
                                    x:Name="ResetButton"
                                    Click="ResetButton_Click"
                                    Content="🔄 Reset" />

                                <Button
                                    x:Name="ImportButton"
                                    Click="ImportButton_Click"
                                    Content="📥 Import" />

                                <Button
                                    x:Name="ExportButton"
                                    Click="ExportButton_Click"
                                    Content="📤 Export" />
                            </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Simple Status Bar -->
            <Border
                Grid.Row="2"
                Padding="20,10"
                Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                <TextBlock
                    x:Name="StatusText"
                    Text="Ready" />
            </Border>
        </Grid>
    </Page.Content>
</Page>