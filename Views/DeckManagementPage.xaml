<Page
    x:Class="FlashcardApp.WinUI.Views.DeckManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlashcardApp.WinUI">
    <Page.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Deck Management Header  -->
            <Border
                Grid.Row="0"
                Padding="20,15"
                Background="{ThemeResource SystemAccentColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="🗂️ Deck Management" />

                    <Button
                        x:Name="BackButton"
                        Grid.Column="1"
                        Padding="10,5"
                        Background="Transparent"
                        Click="BackButton_Click"
                        Content="← Back"
                        FontSize="14"
                        Foreground="White"
                        ToolTipService.ToolTip="Return to Main Menu" />
                </Grid>
            </Border>

            <!--  Main Content  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Deck List Panel  -->
                <Border
                    Grid.Column="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Deck List Header  -->
                        <StackPanel
                            Grid.Row="0"
                            Padding="20,15"
                            Spacing="10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="Your Decks" />
                            <Button
                                x:Name="CreateDeckButton"
                                HorizontalAlignment="Stretch"
                                Background="{ThemeResource SystemAccentColor}"
                                Click="CreateDeckButton_Click"
                                Content="+ Create New Deck"
                                Foreground="White" />
                        </StackPanel>

                        <!--  Deck List  -->
                        <ScrollViewer Grid.Row="1" Padding="20,0,20,20">
                            <StackPanel x:Name="DeckListPanel" Spacing="8">
                                <!--  Decks will be dynamically added here  -->
                            </StackPanel>
                        </ScrollViewer>

                        <!--  Import/Export Actions  -->
                        <StackPanel
                            Grid.Row="2"
                            Padding="20,0,20,20"
                            Spacing="8">
                            <Button
                                HorizontalAlignment="Stretch"
                                Click="ImportDeckButton_Click"
                                Content="📥 Import Deck" />
                            <Button
                                HorizontalAlignment="Stretch"
                                Click="ExportAllButton_Click"
                                Content="📤 Export All" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Deck Details Panel  -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Deck Details Header  -->
                    <Border
                        Grid.Row="0"
                        Padding="20,15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                x:Name="DeckTitleText"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Select a deck to view details" />

                            <StackPanel
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="10">
                                <Button
                                    x:Name="EditDeckButton"
                                    Click="EditDeckButton_Click"
                                    Content="✏️ Edit"
                                    IsEnabled="False" />
                                <Button
                                    x:Name="DeleteDeckButton"
                                    Background="Red"
                                    Click="DeleteDeckButton_Click"
                                    Content="🗑️ Delete"
                                    Foreground="White"
                                    IsEnabled="False" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Deck Content  -->
                    <ScrollViewer Grid.Row="1" Padding="20">
                        <StackPanel x:Name="DeckContentPanel" Spacing="15">
                            <!--  Deck details will be displayed here  -->
                        </StackPanel>
                    </ScrollViewer>

                    <!--  Deck Actions  -->
                    <Border
                        Grid.Row="2"
                        Padding="20,15"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="0,1,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button
                                x:Name="AddCardButton"
                                Click="AddCardButton_Click"
                                Content="+ Add Card"
                                IsEnabled="False" />
                            <Button
                                x:Name="StudyDeckButton"
                                Background="{ThemeResource SystemAccentColor}"
                                Click="StudyDeckButton_Click"
                                Content="📚 Study This Deck"
                                Foreground="White"
                                IsEnabled="False" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!--  Status Bar  -->
            <Border
                Grid.Row="2"
                Padding="20,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0">
                <TextBlock
                    x:Name="StatusText"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Ready" />
            </Border>
        </Grid>
    </Page.Content>
</Page>

