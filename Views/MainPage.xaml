<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="FlashcardApp.WinUI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlashcardApp.WinUI">
    <Page.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>



            <!--  Simple Header  -->
            <Border
                Grid.Row="0"
                Padding="20,15"
                Background="{ThemeResource SystemAccentColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="🧠 FlashcardApp - Modern WinUI" />

                    <Button
                        x:Name="ThemeToggleButton"
                        Grid.Column="1"
                        Padding="10,5"
                        Background="Transparent"
                        Click="ThemeToggleButton_Click"
                        Content="🌙"
                        FontSize="16"
                        Foreground="White"
                        ToolTipService.ToolTip="Toggle Theme" />
                </Grid>
            </Border>

            <!--  Main Content  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Simple Navigation  -->
                <Border
                    Grid.Column="0"
                    Width="200"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,1,0">
                    <StackPanel Padding="20" Spacing="10">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Navigation" />
                        <Button
                            HorizontalAlignment="Stretch"
                            Click="StudySessions_Click"
                            Content="📚 Study Sessions" />
                        <Button
                            HorizontalAlignment="Stretch"
                            Click="DeckManagement_Click"
                            Content="🗂️ Deck Management" />
                        <Button
                            HorizontalAlignment="Stretch"
                            Click="Statistics_Click"
                            Content="📊 Statistics" />
                        <Button
                            HorizontalAlignment="Stretch"
                            Click="Configuration_Click"
                            Content="⚙️ Configuration" />
                        <Button
                            HorizontalAlignment="Stretch"
                            Click="Help_Click"
                            Content="❓ Help" />
                    </StackPanel>
                </Border>

                <!--  Content Area  -->
                <ScrollViewer
                    Grid.Column="1"
                    Padding="30"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    HorizontalScrollMode="Disabled"
                    VerticalScrollMode="Auto"
                    ZoomMode="Disabled">
                    <TextBlock
                        x:Name="OutputTextBlock"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                        LineHeight="24"
                        TextWrapping="Wrap" />
                </ScrollViewer>
            </Grid>

            <!--  Simple Status Bar  -->
            <Border
                Grid.Row="2"
                Padding="20,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0">
                <TextBlock
                    x:Name="StatusText"
                    FontSize="12"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Ready" />
            </Border>
        </Grid>
    </Page.Content>
</Page>
